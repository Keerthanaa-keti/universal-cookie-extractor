{
  "manifest_version": 3,
  "name": "Universal Cookie Extractor",
  "version": "1.0",
  "description": "Extract cookies from any website for automation purposes",
  "permissions": [
    "cookies",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Universal Cookie Extractor"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}